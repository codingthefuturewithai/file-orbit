# Infrastructure configuration for Docker Compose
# These settings are used by both Docker containers and the backend application

# PostgreSQL Database
# Note: If you have PostgreSQL running locally on port 5432, change POSTGRES_PORT to avoid conflicts
POSTGRES_SERVER=localhost
POSTGRES_PORT=5432
POSTGRES_USER=ctf_rclone
POSTGRES_PASSWORD=ctf_rclone_password
POSTGRES_DB=ctf_rclone

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Rclone Remote Control
RCLONE_RC_ADDR=localhost:5572