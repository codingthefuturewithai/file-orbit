# API Configuration
SECRET_KEY=your-secret-key-here-change-in-production
API_V1_STR=/api/v1

# Database
POSTGRES_SERVER=localhost
POSTGRES_USER=pbs_rclone
POSTGRES_PASSWORD=pbs_rclone_password
POSTGRES_DB=pbs_rclone

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Rclone
RCLONE_RC_ADDR=localhost:5572

# Email Configuration (PBS SMTP)
SMTP_HOST=smtp.pbs.org
SMTP_PORT=587
SMTP_FROM=noreply@pbs.org
SMTP_TLS=true
# SMTP_USER=your-smtp-user
# SMTP_PASSWORD=your-smtp-password

# AWS Configuration (for S3 events)
AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# SQS_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/account-id/queue-name

# File Watching
# Comma-separated list of directories to watch
# WATCH_DIRECTORIES=/mnt/watch,/data/incoming

# Throttling
DEFAULT_MAX_CONCURRENT=5
THROTTLE_CHECK_INTERVAL=1